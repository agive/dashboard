<% content_for :title do %>Camille's dashboard - Other<% end %>
<%
file = File.read('data/other.json')
@help = JSON.parse(file)
%>
<body class="black">
  <div id="container" class="full-width">
    <div class="row">
      <div class="col-sm-12">
        <a class="help-icon" href="#quotes"></a>
        <div data-id="quotes" data-view="Text" class="lilac"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <a class="help-icon" href="#rescuetime"></a>
        <div data-id="rescuetime" data-view="Number" data-title="Productivity" class="grey"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#laptop"></a>
        <div data-id="laptop" data-view="TimeSinceLast" data-title="Last laptop rebuild" class="dark-blue"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#euler"></a>
        <div data-id="euler" data-view="Number" data-title="Unsolved Project Euler" class="cyan"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#aww"></a>
        <div data-id="aww" data-view="Image"></div>
      </div>
    </div>
    <div class="separator">
    </div>
    <% @help.each do |index, info| %>
      <div class="help-row" id="<%=index%>">
        <div class="col-sm-12">
          <div class="col-sm-3 help-title padding-top">
            <h3><%= info["title"] %></h3>
          </div>
          <div class="col-sm-3 help padding-top">
            <p class="goal"><%= info["goal"] %></p>
            <p class="info"><%= info["info"] %></p>
            <p class="code"><a href="https://gist.github.com/<%= info["gist"] %>">Code for widget</a></p>
          </div>
          <div class="col-sm-6 help padding-top">
            <a class="home-icon" href="#container" title="Back to dashboard"></a>
            <%= info["description"] %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>
