<% content_for :title do %>Camille's dashboard - Entertainment<% end %>
<%
file = File.read('data/entertainment.json')
@help = JSON.parse(file)
%>
<body class="black">
  <div id="container" class="full-width">
    <div class="row">
      <div class="col-sm-3">
        <a class="help-icon" href="#rss"></a>
        <div data-id="rss" data-view="Number" data-title="RSS"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#pocket"></a>
        <div data-id="pocket" data-view="Number" data-title="Pocket"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#books"></a>
        <div data-id="books" data-view="Number" data-title="Books" class="cyan"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#kindle"></a>
        <div data-id="kindle" data-view="Number" data-title="Kindle books" class="lilac"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <a class="help-icon" href="#films"></a>
        <div data-id="films" data-view="Number" data-title="Films" class="purple"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#tv"></a>
        <div data-id="tv" data-view="Number" data-title="TV Shows" class="grey"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#videos"></a>
        <div data-id="videos" data-view="Number" data-title="Videos" class="cream"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#podcasts"></a>
        <div data-id="podcasts" data-view="Number" data-title="Podcasts" class="dark-blue"></div>
      </div>
    </div>
    <%= erb(:help, :layout => false) %>
  </div>
  <%= erb(:gauges, :layout => false) %>
</body>
