<% content_for :title do %>Camille's dashboard - Tasks<% end %>
<%
file = File.read('data/tasks.json')
@help = JSON.parse(file)
%>
<body class="black">
  <div id="container" class="full-width">
    <div class="row">
      <div class="col-sm-3">
        <a class="help-icon" href="#wunderlist"></a>
        <div data-id="wunderlist" data-view="Number" data-title="TODOs"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#email"></a>
        <div data-id="email" data-view="Number" data-title="Email"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#newsletter"></a>
        <div data-id="newsletter" data-view="TimeSinceLast" data-title="Newsletter"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#blog"></a>
        <div data-id="blog" data-view="TimeSinceLast" data-title="Blog"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <a class="help-icon" href="#trello"></a>
        <div data-id="trello-current" data-view="Number" data-title="Current" class="cream"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#trello"></a>
        <div data-id="trello-ready" data-view="Number" data-title="Ready" class="purple"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#trello"></a>
        <div data-id="trello-writing" data-view="Number" data-title="Writing" class="lilac"></div>
      </div>
      <div class="col-sm-3">
        <a class="help-icon" href="#trello"></a>
        <div data-id="trello-drawing" data-view="Number" data-title="Drawing" class="cyan"></div>
      </div>
    </div>
    <%= erb(:help, :layout => false) %>
  </div>
</body>
