<% content_for :title do %>Camille's dashboard - Tasks<% end %>
<body class="black">
  <div id="container" class="full-width">
    <div class="row">
      <div class="col-sm-3">
        <div data-id="wunderlist" data-view="Number" data-title="TODOs"></div>
      </div>
      <div class="col-sm-3">
        <div data-id="email" data-view="Number" data-title="Email"></div>
      </div>
      <div class="col-sm-3">
        <div data-id="newsletter" data-view="TimeSinceLast" data-title="Newsletter"></div>
      </div>
      <div class="col-sm-3">
        <div data-id="blog" data-view="TimeSinceLast" data-title="Blog"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <div data-id="trello-ongoing" data-view="Number" data-title="Ongoing" class="cream"></div>
